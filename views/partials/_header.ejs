<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <!--display username in navbar-->
        <%if(user) {%>
        <span class="nav-item nav-link text-white"
          >Login as <%= user.email %>!</span
        >
        <form method="POST" action="/logout" class="d-flex ms-auto">
          <button type="submit" class="btn btn-primary">Logout</button>
        </form>
        <%} else {%>
        <div style="text-align: right">
          <a href="/login">
            <button type="button" class="btn btn-primary">Login</button>
            <!-- Button inside the link -->
          </a>
          <a href="/register">
            <button type="button" class="btn btn-primary">Register</button>
          </a>
        </div>
        <%}%>
      </div>
    </div>
  </nav>
</header>
